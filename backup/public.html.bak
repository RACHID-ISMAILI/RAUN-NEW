.capsule-expanded-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, .65);
  backdrop-filter: blur(2px);
  z-index: 9998;
}
body.capsule-expanded-lock {
  overflow: hidden !important;
}
.capsule .capsule__enlarge {
  position: absolute;
  top: 10px; right: 10px;
  width: 28px; height: 28px;
